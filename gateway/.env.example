# Gateway Configuration
# Copy this file to .env and update the values

# Control Server WebSocket URL
CONTROL_URL=ws://localhost:3001

# API Key for authentication (get this from Control Panel)
API_KEY=gtw_your_api_key_here

# WireGuard settings
WIREGUARD_PORT=51820
WIREGUARD_INTERFACE=wg0

# HTTP/HTTPS ports
HTTP_PORT=80
HTTPS_PORT=443

# Let's Encrypt ACME settings
ACME_EMAIL=admin@example.com
ACME_STAGING=false
ACME_CACHE_DIR=./cache/autocert

# Server settings
PUBLIC_IP=auto
REGION=local
